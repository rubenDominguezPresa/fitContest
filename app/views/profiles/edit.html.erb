<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= simple_form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Change your profile image:</h4>
                <div class="img-circle avatar-image">
                  <%= profile_avatar_select(@user) %>
                </div>
                                                     
                 <label for="file-input">
                   <span class="glyphicon glyphicon-camera"></span>
                 </label>
                <%= f.file_field :avatar, id:"file-input", onChange: 'loadFile(event)' %>
                
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Update your bio:</h4>
                <%= f.input :bio, label: false, input_html: { rows: 4 } %>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.button :submit, 'Update Profile', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
