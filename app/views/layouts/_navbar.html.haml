%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .navbar-container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
      .navbar-brand
        = link_to "FitContest", root_path
      .navbar-nav.navbar-right
        - if user_signed_in?
          = render 'notifications/notification_dropdown'
    .collapse.navbar-collapse#bs-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %form.form-inline.my-2.my-lg-0
              %input.form-control.mr-sm-2{:placeholder => "Search", :type => "text"}/
              %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search
          %li
            = link_to "Retos", index_challenges_path
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Login", new_user_session_path
          %li
            = link_to "Register", new_user_registration_path
